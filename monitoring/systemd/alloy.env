# Grafana Alloy Environment Configuration
# Copy this file to /etc/default/alloy and customize for your environment

# Grafana Cloud Loki Configuration
LOKI_ENDPOINT=https://logs-prod-us-central1.grafana.net/loki/api/v1/push
LOKI_USERNAME=your_loki_instance_id
LOKI_PASSWORD=your_grafana_cloud_api_key

# Optional: Grafana Cloud Prometheus Configuration
PROMETHEUS_ENDPOINT=https://prometheus-prod-us-central1.grafana.net/api/prom/push
PROMETHEUS_USERNAME=your_prometheus_instance_id
PROMETHEUS_PASSWORD=your_grafana_cloud_api_key

# Environment Configuration
ENVIRONMENT=production
# or staging, development, etc.

# Timezone Configuration
# The server's local timezone for log timestamp parsing
# Options: "Local" (recommended), "UTC", or specific timezone like "America/New_York"
SERVER_TIMEZONE=Local

# Hostname override (optional - defaults to system hostname)
# HOSTNAME=custom-hostname

# Logging Configuration
ALLOY_LOG_LEVEL=info
ALLOY_LOG_FORMAT=logfmt

# Performance Tuning
ALLOY_MAX_RECV_MSG_SIZE=104857600
ALLOY_TARGET_SYNC_PERIOD=10s

# Security Settings
ALLOY_ENABLE_FEATURES=

# Custom Labels (optional)
CUSTOM_TEAM_LABEL=infrastructure
CUSTOM_COST_CENTER=12345